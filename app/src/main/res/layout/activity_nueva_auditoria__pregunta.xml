<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_verificar_foto"
    tools:context=".NuevaAuditoria_Pregunta">

    <include
        android:id="@+id/include8"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Responda y tome fotografía de evidencia."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include8" />




    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView33"
        app:layout_constraintEnd_toStartOf="@+id/textView33"
        app:layout_constraintTop_toTopOf="@+id/textView33"
        app:srcCompat="@drawable/ic_ayuda" />

    <TextView
        android:id="@+id/textView_Pregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/saira_condensed_medium"
        android:gravity="center"
        android:text="Nombre Pregunta"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|bottom"
        android:hint="Respuesta"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Pregunta"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textophoto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Capturar."
        app:layout_constraintBottom_toTopOf="@+id/imageView1P"
        app:layout_constraintEnd_toStartOf="@+id/imageView1P2"
        app:layout_constraintStart_toStartOf="@+id/imageView1P" />
    <!--0dp-->
    <ImageView
        android:id="@+id/imageView1P"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView1P2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/ic_camara_evidencia" />


    <TextView
        android:id="@+id/textophoto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Capturar."
        app:layout_constraintBottom_toTopOf="@+id/imageView1P2"
        app:layout_constraintEnd_toEndOf="@+id/imageView1P2"
        app:layout_constraintStart_toStartOf="@+id/imageView1P2" />
    <!--0dp-->
    <ImageView
        android:id="@+id/imageView1P2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView1P3"
        app:layout_constraintStart_toEndOf="@+id/imageView1P"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/ic_camara_evidencia" />

    <TextView
        android:id="@+id/textophoto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capturar."
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageView1P3"
        app:layout_constraintEnd_toEndOf="@+id/imageView1P3"
        app:layout_constraintStart_toEndOf="@+id/imageView1P2" />

    <ImageView
        android:id="@+id/imageView1P3"
        android:layout_width="120dp"
        android:layout_height="120dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView1P2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541"
        app:srcCompat="@drawable/ic_camara_evidencia" />


    <TextView
        android:id="@+id/textophoto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capturar."
        app:layout_constraintEnd_toEndOf="@+id/imageView1P4"
        app:layout_constraintStart_toStartOf="@+id/imageView1P4"
        app:layout_constraintTop_toBottomOf="@+id/imageView1P2" />


    <ImageView
        android:id="@+id/imageView1P4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView1P2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView1P2"
        app:layout_constraintTop_toBottomOf="@+id/textophoto4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_camara_evidencia" />








